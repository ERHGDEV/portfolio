---
import CssIcon from "./icons/CssIcon.astro"
import HtmlIcon from "./icons/HtmlIcon.astro"
import JavaScriptIcon from "./icons/JavaScriptIcon.astro"
import GitHubIcon from "./icons/GitHubIcon.astro"
import LinkButton from "./LinkButton.astro"
import Link from "./icons/Link.astro"
import ReactIcon from "./icons/ReactIcon.astro"
import NodejsIcon from "./icons/NodejsIcon.astro"
import MongoDBIcon from "./icons/MongoDBIcon.astro"
import ExpressIcon from "./icons/ExpressIcon.astro"
import AstroIcon from "./icons/AstroIcon.astro"
import TailwildIcon from "./icons/TailwildIcon.astro"

const TAGS = {
  HTML: {
      name: "HTML",
      class: "bg-white/20",
      icon: HtmlIcon
  },
  CSS: {
      name: "CSS",
      class: "bg-white/20",
      icon: CssIcon
  },
  JavaScript: {
      name: "JavaScript",
      class: "bg-white/20",
      icon: JavaScriptIcon
  },
  React: {
      name: "React",
      class: "bg-white/20",
      icon: ReactIcon
  },
  Nodejs: {
      name: "Node.js",
      class: "bg-white/20",
      icon: NodejsIcon
  },
  MongoDB: {
      name: "MongoDB",
      class: "bg-white/20",
      icon: MongoDBIcon
  },
  Expressjs: {
      name: "Express.js",
      class: "bg-white/20",
      icon: ExpressIcon
  },
  Astro: {
      name: "Astro",
      class: "bg-white/20",
      icon: AstroIcon
  },
  Tailwild: {
      name: "Tailwild CSS",
      class: "bg-white/20",
      icon: TailwildIcon
  }
}

const PROJECTS = [
  {
    title: 'Pensiona-T',
    description: 'Plataforma de proyección de pensión, actualmente con más de 700 usuarios. Ofrece autenticación segura, integración con Mercado Pago y una interfaz intuitiva para facilitar la planificación del retiro.',
    link: 'https://pensiona-t.com/',
    github: 'https://github.com/ERHGDEV/pensiona-t_front',
    image: '/projects/pensiona-t.webp',
    tags: [
      TAGS.React,
      TAGS.Tailwild
    ]       
  },
  {
    title: 'Pensiona-T API',
    description: 'Backend que gestiona la autenticación, administración de usuarios y control de accesos, garantizando un manejo seguro y eficiente de los datos relacionados con pensiones. Incluye integración con Mercado Pago.',
    github: 'https://github.com/ERHGDEV/pensiona-t_back',
    image: '/projects/pensiona-t-back.webp',
    tags: [
      TAGS.MongoDB,
      TAGS.Expressjs,
      TAGS.Nodejs
    ]
  }
]
---

<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, /* github */ }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 
                gap-8 transition duration-500 ease-in-out transform shadow-xl 
                overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl 
                lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="" class="object-cover object-top transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-yellow-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-gray-200">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
            {/* {github && (
              <LinkButton href={github}>
                <GitHubIcon class="size-6" />
                Code

            </LinkButton>
          )} */}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
              </LinkButton>
            )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>