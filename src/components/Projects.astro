---
import CssIcon from "./icons/CssIcon.astro"
import HtmlIcon from "./icons/HtmlIcon.astro"
import JavaScriptIcon from "./icons/JavaScriptIcon.astro"

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-white/20",
        icon: HtmlIcon
    },
    CSS: {
        name: "CSS",
        class: "bg-white/20",
        icon: CssIcon
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-white/20",
        icon: JavaScriptIcon
    }
}

const PROJECTS = [
    {
        title: 'Calculadora de pensión',
        description: 'Te permite realizar la proyección de pensión para trabajadores IMSS de Ley 73, además de generar el reporte detallado del cálculo.',
        link: 'https://pensionley73.vercel.app/',
        github: 'https://github.com/ERHGDEV/pensionL73',
        image: '/projects/pension.webp',
        tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript]       
    }
]
---

{
    PROJECTS.map(({ image, title, description, tags }) => (
        <article>
            <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-2">
                {tags.map((tag) => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-2 px-3`}>
                            <tag.icon class="size-4" />
                            {tag.name}    
                        </span>
                    </li>
                ))}
            </ul>
            <img 
                class="rounded shadow-2xl shadow-white/15" 
                src={image} 
                alt={`Captura de pantalla del proyecto ${image}`}>
        </article>
    ))
}