---
import CssIcon from "./icons/CssIcon.astro"
import HtmlIcon from "./icons/HtmlIcon.astro"
import JavaScriptIcon from "./icons/JavaScriptIcon.astro"
import GitHubIcon from "./icons/GitHubIcon.astro"
import LinkButton from "./LinkButton.astro"
import Link from "./icons/Link.astro"
import ReactIcon from "./icons/ReactIcon.astro"
import NodejsIcon from "./icons/NodejsIcon.astro"
import MongoDBIcon from "./icons/MongoDBIcon.astro"
import ExpressIcon from "./icons/ExpressIcon.astro"
import AstroIcon from "./icons/AstroIcon.astro"
import TailwildIcon from "./icons/TailwildIcon.astro"

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-white/20",
        icon: HtmlIcon
    },
    CSS: {
        name: "CSS",
        class: "bg-white/20",
        icon: CssIcon
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-white/20",
        icon: JavaScriptIcon
    },
    React: {
        name: "React",
        class: "bg-white/20",
        icon: ReactIcon
    },
    Nodejs: {
        name: "Node.js",
        class: "bg-white/20",
        icon: NodejsIcon
    },
    MongoDB: {
        name: "MongoDB",
        class: "bg-white/20",
        icon: MongoDBIcon
    },
    Expressjs: {
        name: "Express.js",
        class: "bg-white/20",
        icon: ExpressIcon
    },
    Astro: {
        name: "Astro",
        class: "bg-white/20",
        icon: AstroIcon
    },
    Tailwild: {
        name: "Tailwild CSS",
        class: "bg-white/20",
        icon: TailwildIcon
    }
}

const PROJECTS = [
    {
      title: 'Bitácora de viajes',
      description: 'Front para el registro de viajes para empresa de transporte turístico.',
      link: 'https://trips-front.vercel.app/',
      github: 'https://github.com/ERHGDEV/trips_front',
      image: '/projects/tripsFront.webp',
      tags: [TAGS.React, TAGS.CSS]       
    },
    {
      title: 'Dragons API',
      description: 'API sobre los dragones de Canción de Hielo y Fuego, con información sobre su origen, características y más.',
      link: 'https://dragons-api-ten.vercel.app/',
      github: 'https://github.com/ERHGDEV/dragons_api',
      image: './projects/dragons.webp',
      tags: [
        TAGS.MongoDB,
        TAGS.Expressjs,
        TAGS.React,
        TAGS.Nodejs
      ]       
    },
    {
      title: 'Landing Torneado en Madera',
      description: 'Landing page desarrollada con Astro y Tailwind.',
      link: 'https://ricardohernandeztornero.vercel.app/',
      github: 'https://github.com/ERHGDEV/rhtornero',
      image: '/projects/rhtornero.webp',
      tags: [TAGS.Astro, TAGS.Tailwild]       
    },
    {
      title: 'Trips API',
      description: 'API para manejar el registro de viajes para los operadores de una empresa de transporte turístico. ¡Adaptala a tus necesidades!',
      link: 'https://trip-api-henna.vercel.app',
      github: 'https://github.com/ERHGDEV/trips_api',
      image: './projects/apitrips.webp',
      tags: [
        TAGS.MongoDB,
        TAGS.Expressjs,
        TAGS.Nodejs
      ]       
    },
     {
      title: 'Calculadora de pensión',
      description: 'Te permite realizar la proyección de pensión para trabajadores IMSS de Ley 73, además de generar el reporte detallado del cálculo.',
      link: 'https://pensionley73.vercel.app/',
      github: 'https://github.com/ERHGDEV/pensionL73',
      image: './projects/pension.webp',
      tags: [TAGS.HTML, TAGS.CSS, TAGS.JavaScript]
    } 
]
---

<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 
                gap-8 transition duration-500 ease-in-out transform shadow-xl 
                overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl 
                lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="" class="object-cover object-top transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-yellow-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <div class="mt-2 text-gray-200">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHubIcon class="size-6" />
                Code

            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
              </LinkButton>
            )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>